<%= simple_form_for(@poem) do |form| %>
  <%= render 'errors', object: @poem %>
      
  <%= form.input :title %>
  <%= form.select :status, Poem::POEM_STATUSES %>
  <%= 
    form.input :user_id, 
    as: :hidden,
    input_html: { value: current_user.id }
  %>
  <%= form.button :submit %>
<% end %>
